{
    "compileOnSave": true,
    "compilerOptions": {
        "jsx": "react",
        "baseUrl": "./packages",
        "paths": {
            "hostConfig": ["./react-dom/src/hostConfig.ts"],
        },
        "useDefineForClassFields": true,
        "target": "ES6",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "lib": [
            "ESNext",
            "dom",
        ],
        "noEmit": true,
    },
}